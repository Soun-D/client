{
  "manifest_version": 3,
  "name": "Soun-D",
  "description": "You can play .mp3, .m4a and YOUTUBE when the URL matches when you access the website.",
  "version": "0.0.1.0",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["tabs", "identity", "identity.email"],
  "author": "Kwak Do Hyun",
  "action": {
    "default_popup": "index.html",
    "default_title": "Soun-D",
    "default_icon": {
      "16": "/images/soun-d-icon16.png",
      "32": "/images/soun-d-icon32.png",
      "48": "/images/soun-d-icon48.png",
      "128": "/images/soun-d-icon128.png"
    }
  },
  "icons": {
    "16": "/images/soun-d-icon16.png",
    "32": "/images/soun-d-icon32.png",
    "48": "/images/soun-d-icon48.png",
    "128": "/images/soun-d-icon128.png"
  }
}
